@model List<TinTuc>
@{
    ViewBag.Title = "Danh sách Tin tức";
    ViewBag.Controller = "Tin tức";
    ViewBag.General = "active";
    ViewBag.News = "active";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Id = "view-null";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
                <a href="/Admin/News/Add" class="btn btn-success pull-right">Thêm</a>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tiêu đề</th>
                            <th>Người tạo</th>
                            <th>Ngày tạo</th>
                            <th class="w100">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.HinhAnh" width="100" />
                                </td>
                                <td>@item.TieuDe</td>
                                <td>@item.TaiKhoan.HoTen</td>
                                <td>@item.NgayDang.Value.ToString("dd-MM-yyyy")</td>
                                <td>
                                    <a href="/Admin/News/Edit/@item.MaTinTuc" class="btn btn-info btn-sm">Sửa</a>
                                    <a href="/Admin/News/Delete/@item.MaTinTuc" onclick="return confirm('Bạn chắc chắn muốn xóa mục đã chọn?')" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
