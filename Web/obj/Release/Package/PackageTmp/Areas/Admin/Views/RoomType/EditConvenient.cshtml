@model TienNghi
@{
    var Db = new WebDatPhongEntities();
    var item = Db.LoaiPhongs.FirstOrDefault(x => x.MaLoaiPhong == Model.MaLoaiPhong);

    ViewBag.Title = "Sửa tiện nghi cho loại phòng: " + item.TenLoaiPhong;
    ViewBag.Controller = "Loại phòng";
    ViewBag.General = "active";
    ViewBag.RoomType = "active";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Id = "view-null";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form action="/Admin/RoomType/EditConvenient" method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                @Html.Partial("_UpdateConvenient", Model)
                <div class="box-footer">
                    <a href="/Admin/RoomType/View/@Model.MaLoaiPhong" class="btn btn-default pull-left">Chi tiết loại phòng</a>
                    <button type="submit" class="btn btn-primary pull-right">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

