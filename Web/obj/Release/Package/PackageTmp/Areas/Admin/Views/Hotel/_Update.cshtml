@model KhachSan
@Html.HiddenFor(x => x.MaKhachSan)

<div class="box-body">
    <div class="form-group">
        <label class="col-sm-3 control-label">Tên khách sạn</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.TenKhachSan, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.TenKhachSan)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">SĐT</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.SDT, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.SDT)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Email</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Email, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Địa chỉ</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.DiaChi, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.DiaChi)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Hình ảnh</label>
        <div class="col-sm-7">
            @Html.TextBoxFor(x => x.HinhAnh, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.HinhAnh)
        </div>
        <div class="col-sm-2">
            <a class="btn btn-info" id="btnImg">Tải ảnh lên</a>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <img src="@Model.HinhAnh" width="150" id="imgAnh" />
        </div>
    </div>
</div>
