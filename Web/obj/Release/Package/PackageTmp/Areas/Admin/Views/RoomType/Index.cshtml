@model List<LoaiPhong>
@{
    ViewBag.Title = "Danh sách Loại phòng";
    ViewBag.Controller = "Loại phòng";
    ViewBag.General = "active";
    ViewBag.RoomType = "active";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Id = "view-null";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
                <a href="/Admin/RoomType/Add" class="btn btn-success pull-right">Thêm</a>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Khách sạn</th>
                            <th>Tên loại phòng</th>
                            <th>Giá (VNĐ)</th>
                            <th>Số giường</th>
                            <th>Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.HinhAnh" width="100" />
                                </td>
                                <td>@item.KhachSan.TenKhachSan</td>
                                <td>@item.TenLoaiPhong</td>
                                <td>@item.DonGia.Value.ToString("N0")</td>
                                <td>@item.SoGiuong</td>
                                <td>
                                    <a href="/Admin/RoomType/View/@item.MaLoaiPhong" class="btn btn-info btn-sm">Chi tiết</a>
                                    <a href="/Admin/RoomType/Edit/@item.MaLoaiPhong" class="btn btn-info btn-sm">Sửa</a>
                                    <a href="/Admin/RoomType/Delete/@item.MaLoaiPhong" onclick="return confirm('Bạn chắc chắn muốn xóa mục đã chọn?')" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
