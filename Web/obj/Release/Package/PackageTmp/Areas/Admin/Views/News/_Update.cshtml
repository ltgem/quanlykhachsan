@model TinTuc
@Html.HiddenFor(x => x.MaTinTuc)

<div class="box-body">
    <div class="form-group">
        <label class="col-sm-3 control-label">Tiêu đề</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.TieuDe, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.TieuDe)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Nội dung</label>
        <div class="col-sm-9">
            @Html.TextAreaFor(x => x.NoiDung, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.NoiDung)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Hình ảnh</label>
        <div class="col-sm-7">
            @Html.TextBoxFor(x => x.HinhAnh, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.HinhAnh)
        </div>
        <div class="col-sm-2">
            <a class="btn btn-info" id="btnImg">Tải ảnh lên</a>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <img src="@Model.HinhAnh" width="150" id="imgAnh" />
        </div>
    </div>
</div>
