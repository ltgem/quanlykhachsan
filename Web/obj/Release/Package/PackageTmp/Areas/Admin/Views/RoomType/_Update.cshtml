@model LoaiPhong
@{
    var db = new WebDatPhongEntities();
    var list = new List<SelectListItem>();
    foreach (var item in db.KhachSans.ToList())
    {
        list.Add(new SelectListItem { Value = item.MaKhachSan + "", Text = item.TenKhachSan });
    }
}
@Html.HiddenFor(x => x.MaLoaiPhong)

<div class="box-body">
    <div class="form-group">
        <label class="col-sm-3 control-label">Khách sạn</label>
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.MaKhachSan, list, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.MaKhachSan)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Tên loại phòng</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.TenLoaiPhong, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.TenLoaiPhong)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Mô tả</label>
        <div class="col-sm-9">
            @Html.TextAreaFor(x => x.MoTa, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.MoTa)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Số giường</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.SoGiuong, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.SoGiuong)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Đơn giá (VNĐ)</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.DonGia, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.DonGia)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Hình ảnh</label>
        <div class="col-sm-7">
            @Html.TextBoxFor(x => x.HinhAnh, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.HinhAnh)
        </div>
        <div class="col-sm-2">
            <a class="btn btn-info" id="btnImg">Tải ảnh lên</a>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <img src="@Model.HinhAnh" width="150" id="imgAnh" />
        </div>
    </div>
</div>
