@model List<DichVu>
@{
    ViewBag.Title = "Danh Dịch vụ";
    ViewBag.Controller = "Dịch vụ";
    ViewBag.General = "active";
    ViewBag.Service = "active";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Id = "view-null";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
                <a href="/Admin/Service/Add" class="btn btn-success pull-right">Thêm</a>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Tên dịch vụ</th>
                            <th>Giá (VNĐ)</th>
                            <th class="w100">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenDichVu</td>
                                <td>@item.Gia.Value.ToString("N0")</td>
                                <td>
                                    <a href="/Admin/Service/Edit/@item.MaDichVu" class="btn btn-info btn-sm">Sửa</a>
                                    <a href="/Admin/Service/Delete/@item.MaDichVu" onclick="return confirm('Bạn chắc chắn muốn xóa mục đã chọn?')" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
