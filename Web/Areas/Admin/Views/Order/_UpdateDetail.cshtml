@model ChiTietDonDatPhong
@{
    var db = new WebDatPhongEntities();
    var list = new List<SelectListItem>();
    foreach (var item in db.LoaiPhongs.ToList())
    {
        list.Add(new SelectListItem { Value = item.MaLoaiPhong + "", Text = item.TenLoaiPhong + " - " + item.KhachSan.TenKhachSan });
    }
}
@Html.HiddenFor(x => x.MaChiTiet)
@Html.HiddenFor(x => x.MaDonDatPhong)

<div class="box-body">
    <div class="form-group">
        <label class="col-sm-3 control-label">Loại phòng</label>
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.MaLoaiPhong, list, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.MaLoaiPhong)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Số người</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.SoNguoi, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.SoNguoi)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Số phòng</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.SoPhong, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.SoPhong)
        </div>
    </div>
</div>
