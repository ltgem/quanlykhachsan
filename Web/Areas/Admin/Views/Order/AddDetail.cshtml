@model ChiTietDonDatPhong
@{
    var Db = new WebDatPhongEntities();
    var item = Db.DonDatPhongs.FirstOrDefault(x => x.MaDonDatPhong == Model.MaDonDatPhong);

    ViewBag.Title = "Thêm chi tiết đơn đặt phòng: " + item.MaDonDatPhong;
    ViewBag.Controller = "Đơn đặt phòng";
    ViewBag.General = "active";
    ViewBag.Order = "active";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Id = "view-null";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form action="/Admin/Order/AddDetail" method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                @Html.Partial("_UpdateDetail", Model)
                <div class="box-footer">
                    <a href="/Admin/Order/View/@Model.MaLoaiPhong" class="btn btn-default pull-left">Chi tiết đặt phòng</a>
                    <button type="submit" class="btn btn-primary pull-right">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

