@model DonDatPhong
@{

}
@Html.HiddenFor(x => x.MaDonDatPhong)

<div class="box-body">
    <div class="form-group">
        <label class="col-sm-3 control-label">Ngày đến</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.NgayDen, new Dictionary<string, object>
            {
                {"class", "form-control datetimepicker"}
            })
            @Html.ValidationMessageFor(x => x.NgayDen)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Ngày đi</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.NgayDi, new Dictionary<string, object>
            {
                {"class", "form-control datetimepicker"}
            })
            @Html.ValidationMessageFor(x => x.NgayDi)
        </div>
    </div>
    <h4>Thông tin khách hàng đặt phòng</h4>
    <hr />
    <div class="form-group">
        <label class="col-sm-3 control-label">Họ tên</label>
        <div class="col-sm-9">
            @Html.TextAreaFor(x => x.HoTen, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.HoTen)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">SĐT</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.SoDienThoai, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.SoDienThoai)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Email</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Email, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Ghi chú</label>
        <div class="col-sm-9">
            @Html.TextAreaFor(x => x.GhiChu, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.GhiChu)
        </div>
    </div>
</div>
