@model List<TaiKhoan>
@{
    ViewBag.Title = "Danh sách tài khoản";
    ViewBag.Controller = "Tài khoản";
    ViewBag.General = "active";
    ViewBag.User = "active";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Id = "view-null";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
                <a href="/Admin/User/Add" class="btn btn-success pull-right">Thêm</a>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Tài khoản</th>
                            <th>Họ tên</th>
                            <th>Quyền</th>
                            <th class="w100">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenDangNhap</td>
                                <td>@item.HoTen</td>
                                <td>@item.PhanQuyen.TenQuyen</td>
                                <td>
                                    <a href="/Admin/User/Edit/@item.MaTaiKhoan" class="btn btn-info btn-sm">Sửa</a>
                                    <a href="/Admin/User/Delete/@item.MaTaiKhoan" onclick="return confirm('Bạn chắc chắn muốn xóa mục đã chọn?')" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
